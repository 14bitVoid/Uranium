{
    "name": "UltiScanTastic",
    "platform": "ultiscantastic.obj",
    "required_plugins": [
        "Console Logger",
        "ScannerBackend"
    ],
    "machine_settings": {
        "machine_width": {
            "default": 100
        },
        "machine_height": {
            "default": 100
        }
    },
    "categories": {
        "calibration": {
            "label": "Calibration",
            "visible": true,
            "settings": {
                "calibration_type": {
                    "label": "Calibration type",
                    "type": "enum",
                    "default": "Board",
                    "options": [
                        "Board",
                        "Corner"
                    ]
                },
                "setup_type": {
                    "label": "Setup",
                    "type": "enum",
                    "default": "Platform",
                    "options": [
                        "Platform",
                        "Freeform"
                    ]
                },
                "calib_board_width": {
                    "label": "Calibration board width",
                    "type": "int",
                    "default": 4
                },
                "calib_board_height": {
                    "label": "calibration board height",
                    "type": "int",
                    "default": 11
                },
                "physical_object_size_calibration_board": {
                    "label": "physical_object_size_calibration_board",
                    "type": "int",
                    "default": 125
                },
                "calibration_rotation_angle": {
                    "label": "Calibration rotation angle",
                    "type": "double",
                    "default": 85,
                    "children": {
                        "projector_calibration_rotation_angle": {
                            "label": "projector_calibration_rotation_angle",
                            "type": "double",
                            "default": 85,
                            "visible": false
                        },
                        "platform_calibration_rotation_angle": {
                            "label": "projector_calibration_rotation_angle",
                            "type": "double",
                            "default": 85,
                            "visible": false
                        }
                    }
                },
                "calibration_match_window_size": {
                    "label": "Window match size",
                    "type": "int",
                    "default": 25
                },
                "number_of_calibration_boards": {
                    "label": "num calib boards",
                    "type": "int",
                    "default": 10,
                    "min_value": 0,
                    "active_if": {
                        "setting": "calibration_type",
                        "value": "Board"
                    },
                    "max_value": 250,
                    "children": {
                        "number_of_calibration_boards_scanner": {
                            "label": "num calib boards scanner",
                            "type": "int",
                            "default": 10,
                            "min_value": 0,
                            "max_value": 250
                        },
                        "number_of_calibration_boards_platform": {
                            "label": "num calib boards platform",
                            "type": "int",
                            "default": 10,
                            "active_if": {
                                "setting": "setup_type",
                                "value": "Platform"
                            },
                            "min_value": 0,
                            "max_value": 250
                        }
                    }
                }
            }
        },
        "stitching": {
            "label": "Stitching",
            "visible": true,
            "settings": {
                "icp_correspondance_distance": {
                    "label": "Correspondence distance",
                    "type": "double",
                    "default": 5
                },
                "global_correspondance_distance": {
                    "label": "Correspondence distance",
                    "type": "double",
                    "default": 5
                }
            }
        },
        "meshing": {
            "label": "Meshing",
            "visible": true,
            "settings": {
                "poisson_solver_depth": {
                    "label": "Poisson solver depth",
                    "type": "int",
                    "default": 8
                },
                "poisson_num_samples_per_node": {
                    "label": "Poisson number of samples per node",
                    "type": "int",
                    "default": 1
                }
            }
        },
        "scanning": {
            "label": "Scanning",
            "visible": true,
            "settings": {
                "pattern_type": {
                    "label": "Pattern type",
                    "type": "enum",
                    "default": "Grey code",
                    "options": [
                        "Grey code",
                        "Phase shift"
                    ]
                },
                "number_of_phase_pattern_shifts": {
                    "label": "Pattern shifts",
                    "type": "int",
                    "default": 16,
                    "min_value": 3,
                    "max_value": 150,
                    "active_if": {
                        "setting": "pattern_type",
                        "value": "Phase shift"
                    }
                },
                "reconstruction_m": {
                    "type": "int",
                    "default": 50
                },
                "reconstruction_b": {
                    "type": "double",
                    "default": 0.4
                },
                "number_of_scans_per_rotation": {
                    "label": "Scans per rotation",
                    "type": "int",
                    "default": 12
                },
                "bit_depth_patterns_scan": {
                    "label": "Bit depth grey pattern",
                    "type": "int",
                    "default": 10,
                    "active_if": {
                        "setting": "pattern_type",
                        "value": "Grey code"
                    }
                },
                "sor_neighbours": {
                    "type": "int",
                    "default": 75,
                    "label": "Statistical outlier removal neighbours"
                },
                "sor_std": {
                    "type": "double",
                    "default": 0.4,
                    "label": "sor std"
                },
                "scan_min_distance": {
                    "type": "int",
                    "default": 0,
                    "label": "Minium scan distance"
                },
                "scan_max_distance": {
                    "type": "int",
                    "default": 0,
                    "label": "Maximum scan distance"
                },
                "normal_estimation_radius": {
                    "type": "double",
                    "default": 25,
                    "label": "Normal estimation radius"
                }
            }
        },
        "hardware": {
            "label": "Hardware settings",
            "visible": false,
            "settings": {
                "camera_width": {
                    "label": "Camera width",
                    "type": "int",
                    "default": 1280,
                    "visible": false
                },
                "camera_height": {
                    "label": "Camera height",
                    "type": "int",
                    "default": 720,
                    "visible": false
                },
                "projector_width": {
                    "label": "projector width",
                    "type": "int",
                    "default": 1280,
                    "visible": false
                },
                "projector_height": {
                    "label": "projector height",
                    "type": "int",
                    "default": 720,
                    "visible": false
                },
                "projection_delay": {
                    "label": "Delay between projections",
                    "type": "int",
                    "default": 250,
                    "visible": false
                },
                "steps_per_full_rotation_platform": {
                    "label": "Steps per rotation platform",
                    "type": "int",
                    "default": 9700,
                    "visible": false
                },
                "capture_debug_state": {
                    "label": "capture debug ",
                    "type": "int",
                    "default": 0,
                    "visible": false
                }
            }
        }
    }
}
