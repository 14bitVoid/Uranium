{
    "name": "UltiScanTastic",
    "platform": "ultiscantastic.obj",
    "required_plugins": [
        "Console Logger",
        "ScannerBackend"
    ],
    "machine_settings": {
        "machine_width": {
            "default": 100
        },
        "machine_height": {
            "default": 100
        }
    },
    "categories": {
        "calibration": {
            "label": "Calibration",
            "visible": true,
            "settings": {
                "calibration_type": {
                    "label": "Calibration type",
                    "type": "enum",
                    "default": "Board",
                    "options": [
                        "Board",
                        "Corner"
                    ]
                },
                "setup_type": {
                    "label": "Setup",
                    "type": "enum",
                    "default": "Platform",
                    "options": [
                        "Platform",
                        "Freeform"
                    ]
                },
                "number_of_calibration_boards": {
                    "label": "num calib boards",
                    "type": "int",
                    "default": 1,
                    "min_value": 0,
                    "active_if": {
                        "setting": "calibration_type",
                        "value": "Board"
                    },
                    "max_value": 250,
                    "children": {
                        "number_of_calibration_boards_scanner": {
                            "label": "num calib boards scanner",
                            "type": "int",
                            "default": 1,
                            "min_value": 0,
                            "max_value": 250
                        },
                        "number_of_calibration_boards_projector": {
                            "label": "num calib boards projector",
                            "type": "int",
                            "default": 1,
                            "active_if": {
                                "setting": "setup_type",
                                "value": "Platform"
                            },
                            "min_value": 0,
                            "max_value": 250
                        }
                    }
                }
            }
        },
        "meshing": {
            "label": "Meshing",
            "visible": true,
            "settings": {
                "poisson_solver_depth": {
                    "label": "Poisson solver depth",
                    "type": "int",
                    "default": 8
                },
                "poisson_num_samples_per_node": {
                    "label": "Poisson number of samples per node",
                    "type": "int",
                    "default": 1
                }
            }
        },
        "scanning": {
            "label": "Scanning",
            "visible": true,
            "settings": {
                "pattern_type": {
                    "label": "Pattern type",
                    "type": "enum",
                    "default": "Grey code",
                    "options": [
                        "Grey code",
                        "Phase shift"
                    ]
                },
                "number_of_phase_pattern_shifts": {
                    "label": "Pattern shifts",
                    "type": "int",
                    "default": 16,
                    "min_value": 3,
                    "max_value": 150,
                    "active_if": {
                        "setting": "pattern_type",
                        "value": "Phase shift"
                    }
                },
                "reconstruct_m": {
                    "type": "int",
                    "default": 35
                },
                "reconstruct_b": {
                    "type": "double",
                    "default": 0.5
                },
                "number_of_scans_per_rotation": {
                    "label": "Scans per rotation",
                    "type": "int",
                    "default": 12
                },
                "bit_depth_patterns_scan": {
                    "label": "Bit depth grey pattern",
                    "type": "int",
                    "default": 10,
                    "active_if": {
                        "setting": "pattern_type",
                        "value": "Grey code"
                    }
                }
            }
        },
        "hardware": {
            "label": "Hardware settings",
            "visible": false,
            "settings": {
                "camera_width": {
                    "label": "Camera width",
                    "type": "int",
                    "default": 1280,
                    "visible": false
                },
                "camera_height": {
                    "label": "Camera height",
                    "type": "int",
                    "default": 720,
                    "visible": false
                },
                "projector_width": {
                    "label": "projector width",
                    "type": "int",
                    "default": 1280,
                    "visible": false
                },
                "projector_height": {
                    "label": "projector height",
                    "type": "int",
                    "default": 1024,
                    "visible": false
                },
                "projection_delay": {
                    "label": "Delay between projections",
                    "type": "int",
                    "default": 250,
                    "visible": false
                },
                "steps_per_full_rotation_platform": {
                    "label": "Steps per rotation platform",
                    "type": "int",
                    "default": 9700,
                    "visible": false
                }
            }
        }
    }
}
