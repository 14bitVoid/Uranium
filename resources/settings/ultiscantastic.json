{
    "name": "UltiScanTastic",
    "platform": "ultiscantastic.obj",
    "required_plugins": 
    [
        "Console Logger", 
        "ScannerBackend"
    ],
    "machine_settings": {
        "machine_width": { "default": 100 },
        "machine_height": { "default": 100 }
    },
    "categories": {
        "calibration": {
            "label": "Calibration",
            "visible": true,
            "settings": {
                "calibration_type": {
                    "label": "Calibration type",
                    "type": "enum",
                    "default": "Board",
                    "options": [
                        "Board",
                        "Corner"
                    ]
                },
                "setup_type": {
                    "label": "Setup",
                    "type": "enum",
                    "default": "Platform",
                    "options": [
                        "Platform",
                        "Freeform"
                    ]
                },
                "number_of_calibration_boards": {
                    "label": "num calib boards",
                    "type": "int",
                    "default": 1,
                    "min_value": 0,
                    "active_if": {
                        "setting": "calibration_type",
                        "value": "Board"
                    },
                    "max_value": 250,
                    "children": {
                        "number_of_calibration_boards_scanner": {
                            "label": "num calib boards scanner",
                            "type": "int",
                            "default": 1,
                            "min_value": 0,
                            "max_value": 250
                        },
                        "number_of_calibration_boards_projector": {
                            "label": "num calib boards projector",
                            "type": "int",
                            "default": 1,
                            "active_if": {
                                "setting": "setup_type",
                                "value": "Platform"
                            },
                            "min_value": 0,
                            "max_value": 250
                        }
                    }
                }
            }
        },
        "meshing": {
            "label": "Meshing",
            "visible": true,
            "settings": {
                "TestSetting": {
                    "label": "testtest",
                    "type": "int",
                    "default": 210,
                    "min_value": 150,
                    "max_value": 280
                }
            }
        },
        "scanning": {
            "label": "Scanning",
            "visible": true,
            "settings": {
                "pattern_type": {
                    "label": "Pattern type",
                    "type": "enum",
                    "default": "Grey code",
                    "options": [
                        "Grey code",
                        "Phase shift"
                    ]
                },
                "num_phase_pattern_shifts": {
                    "label": "Pattern shifts",
                    "type": "int",
                    "default": 16,
                    "min_value": 3,
                    "max_value": 150,
                    "active_if": {
                        "setting": "pattern_type",
                        "value": "Phase shift"
                    }
                }
            }
        }
    }
}
